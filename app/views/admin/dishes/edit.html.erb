<h1>Dish edit</h1>
<section class="content">
  <div class="row">
    <div class="col-md-6">
      <div class="box box-primary">
        <div class="box-header with-border">
        </div>
        <%= form_for [:admin, @admin_dish] do |f| %>
      <% if @admin_dish.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(admin_dish.errors.count, "error") %> prohibited this admin_dish from being saved:</h2>

          <ul>
            <% admin_dish.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
        <div class="box-body">
          <div class="form-group">
            <%= f.label :category_id , class: "form-control" %>
            <%= f.select :category_id, options_for_select(Category.all.map{|e| [e.name, e.id]}) %>
          </div>

          <div class="form-group">
            <%= f.label :display_name %>
            <%= f.text_field :display_name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :subtitle %>
            <%= f.text_field :subtitle, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :price %>
            <%= f.number_field :price, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_field :description, class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :tags %>
            <%= f.text_field :tags, class: "form-control" %>
          </div>
          <div class="field">
            <%= f.label :image %>
            <%= f.text_field :image, class: "form-control" %>
          </div>
          <br>
          <div class="form-group">
            <%= f.submit "Edit", class: "btn btn-info" %>
          </div>              
        </div>
        <% end %>
      </div>
    </div>
  </section>