
<%= simple_form_for(@book_table) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :guess_id %>
    <%= f.input :total_price %>
    <%= f.input :status %>
    <%= f.input :date_order %>
    <%= f.input :date_receipt %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
