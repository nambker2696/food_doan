
<%= simple_form_for(@dish) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :display_name %>
    <%= f.input :subtitle %>
    <%= f.input :price %>
    <%= f.input :description %>
    <%= f.input :category_id %>
    <%= f.input :tags %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
