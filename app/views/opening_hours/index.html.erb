<p id="notice"><%= notice %></p>

<h1>Opening Hours</h1>

<table>
  <thead>
    <tr>
      <th>Day</th>
      <th>Location</th>
      <th>Open</th>
      <th>Close</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @opening_hours.each do |opening_hour| %>
      <tr>
        <td><%= opening_hour.day %></td>
        <td><%= opening_hour.location_id %></td>
        <td><%= opening_hour.open %></td>
        <td><%= opening_hour.close %></td>
        <td><%= opening_hour.status %></td>
        <td><%= link_to 'Show', opening_hour %></td>
        <td><%= link_to 'Edit', edit_opening_hour_path(opening_hour) %></td>
        <td><%= link_to 'Destroy', opening_hour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Opening Hour', new_opening_hour_path %>
