<div class="box center">
  <div class="box-header">
    <h2><%= t(".sign_in") %></h2>
  </div>

  <div class="box-content">

    <%= form_for :user, url: user_session_path do |f|%>
    <div id="form-login-user">
      <div class="form-group float-label-control">
        <%= f.text_field :email, required: false, autofocus: true,:input_html =>{:class => "form-control" }%>
      </div>
      <div class="form-group float-label-control">
        <%= f.password_field :password, required: false,:input_html => {:maxlength => 15, :size => 30,:class =>"form-control"} %>
      </div>
      <div class="form-group">
        <%= f.check_box :remember_me %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit,:class =>"formButton",:name => t(".sign_in"),:value => t(".sign_in") %>
    </div>
    <% end %>
  </div>
  <div class="form-actions">
    <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path,:class => "sign-in-facebook" %>
  </div>
  <div class="box-footer text-center">
    <p class="for-get"><span>Forgot Your Password - <%= link_to "Reset Password", new_user_password_url %></span></p>
    <p class="regist"><span>Don't Have An Account - <%= link_to "Sign Up",new_user_registration_url %></span></p>
  </div>
</div>