<div class="col-md-12 centered" >
  <h3> Step 1</h3>
  <!-- // form acc chef -->
  <div class="col-md-6">
    <div class="form-group">
      <label><span class="required">*</span>First Name:</label>
      <%= f.text_field :first_name,class: "form-control",required: "required",placeholder: "Enter First Name" %>
    </div>  
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <label class="control-label"><span class="required">*</span>Last Name</label>
      <%= f.text_field :last_name,class: "form-control",required: "required",placeholder: "Enter Last Name" %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <label class="control-label"><span class="required">*</span>Display Name</label>
      <%= f.text_field :name,class: "form-control",required: "required",placeholder: "Dish play name" %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <label class="control-label"><span class="required">*</span>Mobile Number</label>
      <%= f.text_field :phone,class: "form-control",required: "required",placeholder: "Enter Phone Number",maxlength: "11", minlength: "10" %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <label class="control-label"><span class="required">*</span>E-Mail:</label>
      <%= f.email_field :email,class: "form-control",required: "required",placeholder: "Enter Your Mail" %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <label class="control-label"><span class="required">*</span>Confirm Email:</label>
      <%= f.email_field :confirm_email,class: "form-control",required: "required",placeholder: "Enter Again Email" %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <label class="control-label"><span class="required">*</span>Password</label>
      <%= f.password_field :password,class: "form-control",required: "required",placeholder: "Enter Your Password" %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <label class="control-label"><span class="required">*</span>Confirm Password</label>
      <%= f.password_field :confirm_password,class: "form-control",required: "required",placeholder: "Enter Again Password" %>
    </div>
  </div>
  <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >Next</button>
</div>