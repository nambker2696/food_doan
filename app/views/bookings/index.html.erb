<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Guess</th>
      <th>Place</th>
      <th>Status</th>
      <th>Date booked</th>
      <th>Date receipt</th>
      <th>Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.user_id %></td>
        <td><%= booking.guess_id %></td>
        <td><%= booking.place %></td>
        <td><%= booking.status %></td>
        <td><%= booking.date_booked %></td>
        <td><%= booking.date_receipt %></td>
        <td><%= booking.action %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

