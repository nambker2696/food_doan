      <div id="logged-user">
      <i class="fa fa-user fa-3x"></i>
        <% if user_signed_in? %>
        Hello Gay  
        
        <% else %>
        <button type="button" class="btn launchConfirm">Login</button>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div id="logo-store" class="navbar-header" style="margin-left: 40px">
    <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
      <span class="icon icon-bar"></span>
      <span class="icon icon-bar"></span>
      <span class="icon icon-bar"></span>
    </button>
    <%= link_to "LOGO_Store", root_path , id: "brand", class: "navbar-brand animated faded",
    "data-wow-delay": "0.3s", method: :get %>
  </div>
  <div class="collapse navbar-collapse header-nav">
    <ul class="nav navbar-nav navbar-right header-mobile-menu">
      <li><a href=""><i class="fa fa-home"></i></a></li>
