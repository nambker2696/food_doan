<div class="box center">
  <div class="box-header">
    <h2><%= t(".sign_in") %></h2>
  </div>

  <div class="box-content">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <div class="form-group">
        <%= f.input :name, required: false, autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.input :email, required: false, autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.input :password, required: false,:input_html => {:maxlength => 15, :size => 30} %>
      </div>
      <div class="form-group">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit,:class =>"formButton",:name => t(".sign_in") %>
    </div>
    <% end %>
  </div>
  <div class="form-actions">
    <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path,:class => "sign-in-facebook" %>
  </div>
  <div class="box-footer text-center">
    <p class="for-get"><span>Forgot Your Password - <a href="/reset_password">Reset Password</a></span></p>
    <p class="for-get"><span>Don't Have An Account - <a href="/register">Sign Up</a></span></p>
  </div>

  <%= render "devise/shared/links" %>
</div>