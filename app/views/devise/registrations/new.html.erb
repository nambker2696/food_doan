<div class="box center">
  <div class="box-header">
    <h2><%= t(".sign_up") %></h2>
  </div>
  <div class="box-content">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div id="form-login-user">
      <div class="form-group float-label-control">
        <%= f.input :email, required: false, autofocus: true,:input_html =>{:class => "form-control" }%>
      </div>
      <div class="form-group float-label-control">
        <%= f.input :password, required: true,:input_html => {:maxlength => 15, :size => 30,:class =>"form-control"}, hint: (t('devise.shared.minimum_password_length', count: @minimum_password_length) if @minimum_password_length)  %>
      </div>
      <div class="form-group float-label-control">
        <%= f.input :password_confirmation,:input_html => {:maxlength => 15, :size => 30}, required: true %>
      </div>
      <%= flash[:recaptcha_error] %>
      <%= recaptcha_tags %>
      <div class="form-actions">
        <%= f.button :submit,:class =>"formButton",:name => t(".sign_up"),:value => t(".sign_up") %>
      </div>
      <% end %>
    </div>
    
    <div class="box-footer text-center">
      <p class="for-get"><span>Forgot Your Password - <%= link_to "Reset Password", user_password_path%></span></p>
      <p class="for-get"><span>Don't Have An Account - <%= link_to "Sign In",new_user_session_url %></span></p>
    </div>
    <%= render "devise/shared/links" %>
  </div>
</div>