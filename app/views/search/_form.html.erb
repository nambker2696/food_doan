<div class="search-food">
  <div class="search-con">
    <div id="seach-form">
      <%= form_with url: search_path, local: true, method: :get  do |form| %>
      <ul>
        <li class="location">
          <%= form.text_field :q, placeholder: "Type your location or area...", data: { behavior: "autocomplete" }, class: "form-control mr-sm-2" %>
        </li>
        <li class="loction_bkg">
        </li>
        <li class="submit-search-btn">
          <%= form.button "Search" %>
        </li>
      </ul>
      <% end %>
    </div>
  </div>
</div>